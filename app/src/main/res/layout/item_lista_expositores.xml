<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/borde_linea"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivFotoExpoDC"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/charlafoto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreExpositorDC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JUAN MERINO"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescrExpositor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ingeniero de Sistemas y Telecomunicaciones."
            android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>

