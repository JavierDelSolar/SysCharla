<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalleProductoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreDP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ESPECIALIZACION EN ETHICKAL HACKING "
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivFotoDP"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="1dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ciberseguridad" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="COSTO: "
                android:textColor="@color/colorCupos"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCostoDP"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="DESCRIPCION: "
                android:textColor="@color/colorCupos"
                android:textStyle="bold"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollTexto"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tvDescripcionDP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Text View"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
        </ScrollView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:text="Acerca del Docente"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:background="@drawable/borde_linea"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFotoDocente"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/jose" />

            <LinearLayout
                android:layout_width="294dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombreDocente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JUAN MERINO"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescrDocente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Ingeniero de Sistemas"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvDireccProd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Direccion: Calle Diez Canseco - Miraflores" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView2"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginLeft="2dp"/>

        <Button
            android:id="@+id/btn_Interes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@color/colorPrimary"
            android:text="ME INTERESA"
            android:textColor="@android:color/background_light" />
    </LinearLayout>
</ScrollView>