<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Filtros"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cbEventoHoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:checked="true"
            android:text="Eventos Hoy"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <CheckBox
            android:id="@+id/cbEventoPosterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Eventos Posteriores"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/cbEventoHoy"
            app:layout_constraintTop_toBottomOf="@+id/cbEventoHoy" />

        <CheckBox
            android:id="@+id/cbEventoPasados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Eventos Pasados"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/cbEventoPosterior"
            app:layout_constraintTop_toBottomOf="@+id/cbEventoPosterior" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ordenar"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/cbEventoPasados" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <RadioButton
            android:id="@+id/rbOrdenFechaDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Por Fecha - Descendente" />

        <RadioButton
            android:id="@+id/rbOrdenFechaAsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Por Fecha - Ascendente" />

        <RadioButton
            android:id="@+id/rbOrdenAlfaDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alfabeticamente - Descendente" />

        <RadioButton
            android:id="@+id/rbOrdenAlfaAsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alfabeticamente - Ascendente" />
    </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>