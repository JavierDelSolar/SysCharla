<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CharlaDetalleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloCharlaDC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEGURIDAD "
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivFotoCharDE"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="1dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ciberseguridad" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCuposDC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="CUPOS DISPONIBLES"
                android:textColor="@color/colorCupos"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFechaHoraDC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="20/12/2019 18:20"
                android:textAlignment="textEnd"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollTexto"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tvDescripcionDC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@android:color/black" />
        </ScrollView>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:text="Acerca del Expositor"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:background="@drawable/borde_linea"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFotoExpoDC"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/jose" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombreExpositorDC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JUAN MERINO"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescrExpositor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Ingeniero de Sistemas y Telecomunicaciones."
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvDireccCharlaDC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="DirecciÃ³n: AUDITORIO LAS MERCESDES - SANTIAGO DE SURCO"
            android:textStyle="bold" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginLeft="2dp" />

        <Button
            android:id="@+id/btn_SuscribirseDC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@color/colorPrimary"
            android:text="INSCRIBIRSE"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

</ScrollView>